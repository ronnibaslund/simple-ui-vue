{
  "name": "simple-ui-vue",
  "version": "1.6.0",
  "type": "module",
  "files": [
    "dist",
    "src"
  ],
  "main": "./dist/lib.umd.cjs",
  "module": "./dist/lib.js",
  "types": "./dist/types/main.d.ts",
  "exports": {
    ".": {
      "import": "./src/components/components.ts",
      "require": "./src/components/components.ts"
    },
    "./style.css": {
      "import": "./dist/style.css",
      "require": "./dist/style.css"
    },
    "./js": {
      "types": "./dist/types/main.d.ts",
      "import": "./dist/lib.js",
      "require": "./dist/lib.umd.cjs"
    },
    "./config": {
      "types": "./src/global-config.ts",
      "import": "./src/global-config.ts",
      "require": "./src/global-config.ts"
    },
    "./globals": {
      "types": "./src/globals/index.ts",
      "import": "./src/globals/index.ts",
      "require": "./src/globals/index.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --declaration --emitDeclarationOnly --outDir dist --project ./tsconfig.app.json && node ./scripts/rename-types-dir.mjs",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "story:dev": "histoire dev",
    "story:build": "histoire build",
    "story:preview": "histoire preview"
  },
  "peerDependencies": {
    "vue": "^3.0.0"
  },
  "dependencies": {
    "@iconify/vue": "^4.1.1",
    "autoprefixer": "^10.4.17",
    "daisyui": "^5.0.0",
    "defu": "^6.1.4",
    "nanoid": "^5.0.6",
    "postcss": "^8.4.35",
    "radix-vue": "^1.3.2",
    "tailwindcss": "^3.4.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@histoire/plugin-vue": "^0.17.9",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node18": "^18.2.2",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^18.19.3",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.3",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.49.0",
    "eslint-plugin-vue": "^9.17.0",
    "histoire": "^0.17.9",
    "jsdom": "^23.0.1",
    "npm-run-all2": "^6.1.1",
    "prettier": "^3.0.3",
    "typescript": "~5.3.0",
    "vite": "^5.0.10",
    "vitest": "^1.0.4",
    "vue": "^3.4.15",
    "vue-tsc": "^1.8.25"
  }
}
